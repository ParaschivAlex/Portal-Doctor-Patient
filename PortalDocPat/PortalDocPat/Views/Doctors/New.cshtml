@model PortalDocPat.Models.Doctor


<h2>Adaugare doctor</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Doctors"))
{

    @Html.Label("Name", "Nume Doctor")
    <br />
    @Html.TextBox("Name", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
    <br />

    @Html.Label("Phone", "Numar de telefon")
    <br />
    @Html.TextArea("Phone", null, new { @class = "form-control" })
    @Html.ValidationMessage("Phone", "", new { @class = "text-danger" })
    <br />

    @Html.Label("Photo", "Poza")
    <br />
    @Html.TextArea("Photo", null, new { @class = "form-control" })
    @Html.ValidationMessage("Photo", "", new { @class = "text-danger" })

    @Html.Label("PriceRate", "Adaugare rata de pret")
    <br />
    @Html.TextBox("PriceRate", null, new { @class = "form-control" })
    @Html.ValidationMessage("PriceRate", "", new { @class = "text-danger" })
    <br />


    <label>Selectati specializarea</label>
    @Html.DropDownListFor(m => m.SpecializationId, new SelectList(Model.Spec, "Value", "Text"),
        "Selectati specializarea", new { @class = "form-control" })
    <br />
    @Html.ValidationMessage("SpecializationId", "", new { @class = "text-danger" })

    <button class="btn btn-sm btn-success" type="submit">Adauga doctor</button>
}
