@model PortalDocPat.Models.Doctor

<style>
    body {
        background: linear-gradient( rgba(0, 0, 0, 0.15), rgba(0, 0, 0, 0.15) ), url("https://img.rawpixel.com/s3fs-private/rawpixel_images/website_content/v870-tang-36_1.jpg?w=1300&dpr=1&fit=default&crop=default&q=80&vib=3&con=3&usm=15&bg=F4F4F3&ixlib=js-2.2.1&s=e77ca41f1c0b52331b41ac8cdfed783a");
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
        background-position: center;
    }
</style>

<h2 class="text-primary">Editare doctor cu id @Model.DoctorId : @Model.Name</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Doctors", routeValues: new { id = Model.DoctorId }))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.Label("Name", "Nume Doctor")<br />
    @Html.EditorFor(m => m.Name)
    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    <br /><br />

    @Html.Label("Phone", "Numar de telefon")
    <br />
    @Html.TextArea("Phone", null, new { @class = "form-control" })
    @Html.ValidationMessage("Phone", "", new { @class = "text-danger" })
    <br />

    @Html.Label("Photo", "Poza Doctor")<br />
    @Html.EditorFor(m => m.Photo)
    @Html.ValidationMessageFor(m => m.Photo, "", new { @class = "text-danger" })
    <br /><br />

    @Html.Label("PriceRate", "Rata pret")<br />
    @Html.EditorFor(m => m.PriceRate)
    @Html.ValidationMessageFor(m => m.PriceRate, "", new { @class = "text-danger" })
    <br /><br />


    <label>Selectati categoria</label>
    @Html.DropDownListFor(m => m.SpecializationId, new SelectList(Model.Spec, "Value", "Text"), "Selectati specializarea", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.SpecializationId, "", new { @class = "text-danger" })
    <br />

    <button class="btn btn-sm btn-success" type="submit">Modifica informatii</button>
}