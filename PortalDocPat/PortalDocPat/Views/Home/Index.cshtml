@{
	ViewBag.Title = "Home Page";
}

<style>
	body {
		font: 400 15px Lato, sans-serif;
		line-height: 1.8;
		color: #818181;
		background: linear-gradient( rgba(0, 0, 0, 0.15), rgba(0, 0, 0, 0.15) ), url("https://img.rawpixel.com/s3fs-private/rawpixel_images/website_content/v870-tang-36_1.jpg?w=1300&dpr=1&fit=default&crop=default&q=80&vib=3&con=3&usm=15&bg=F4F4F3&ixlib=js-2.2.1&s=e77ca41f1c0b52331b41ac8cdfed783a");
		background-repeat: no-repeat;
		background-size: cover;
		background-attachment: fixed;
		background-position: center;
	}

	h2 {
		font-size: 24px;
		text-transform: uppercase;
		color: #303030;
		font-weight: 600;
		margin-bottom: 30px;
	}

	h4 {
		font-size: 19px;
		line-height: 1.375em;
		color: #303030;
		font-weight: 400;
		margin-bottom: 30px;
	}

	.jumbotron {
		margin-top: 50px;
		background-color: darkslategray;
		color: #fff;
		padding: 100px 25px;
		font-family: Montserrat, sans-serif;
	}

	.navbar {
		box-shadow: none;
	}

	.container-fluid {
		padding: 60px 50px;
	}

	.bg-grey {
		background-color: #f6f6f6;
	}

	.logo {
		color: darkslategray;
		font-size: 200px;
	}

	.thumbnail {
		padding: 0 0 15px 0;
		border: none;
		border-radius: 0;
	}

		.thumbnail img {
			width: 100%;
			height: 100%;
			margin-bottom: 10px;
		}

	.carousel-control.right, .carousel-control.left {
		background-image: none;
		color: darkslategray;
	}

	.carousel-indicators li {
		border-color: darkslategray;
	}

		.carousel-indicators li.active {
			background-color: darkslategray;
		}

	.item h4 {
		font-size: 19px;
		line-height: 1.375em;
		font-weight: 400;
		font-style: italic;
		margin: 70px 0;
	}

	.item span {
		font-style: normal;
	}

	.panel {
		border: 1px solid #f4511e;
		border-radius: 0 !important;
		transition: box-shadow 0.5s;
	}

		.panel:hover {
			box-shadow: 5px 0px 40px rgba(0,0,0, .2);
		}

	.panel-footer .btn:hover {
		border: 1px solid #f4511e;
		background-color: #fff !important;
		color: #f4511e;
	}

	.panel-heading {
		color: #fff !important;
		background-color: #f4511e !important;
		padding: 25px;
		border-bottom: 1px solid transparent;
		border-top-left-radius: 0px;
		border-top-right-radius: 0px;
		border-bottom-left-radius: 0px;
		border-bottom-right-radius: 0px;
	}

	.panel-footer {
		background-color: white !important;
	}

		.panel-footer h3 {
			font-size: 32px;
		}

		.panel-footer h4 {
			color: #aaa;
			font-size: 14px;
		}

		.panel-footer .btn {
			margin: 15px 0;
			background-color: #f4511e;
			color: #fff;
		}

	footer .glyphicon {
		font-size: 20px;
		margin-bottom: 20px;
		color: #f4511e;
	}

	.slide {
		animation-name: slide;
		-webkit-animation-name: slide;
		animation-duration: 1s;
		-webkit-animation-duration: 1s;
		visibility: visible;
	}

	html {
		scroll-behavior: smooth;
	}
</style>
<br />
<marquee> Membrii proiect: Coaje Petrut, Paraschiv Alexandru, Popescu Maria, Staicu Bogdan. </marquee>
<div class="jumbotron text-center">
	<h1>Portal Doctor Patient</h1>
	<p>"We take care of your health! Do you?"</p>
</div>
<div id="about" class="container-fluid">
	<div class="row">
		<div class="col-sm-8">
			<h2>Our mission</h2><br>
			<h4>Our app helps everyone to easily book a consultation to a doctor, manage their personal information and keep track of the medical history.</h4><br>
		</div>
		<div class="col-sm-4">
			<span class="glyphicon glyphicon-heart-empty logo"></span>
		</div>
	</div>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="col-sm-4">
			<span class="glyphicon glyphicon-apple logo slideanim"></span>
		</div>
		<div class="col-sm-8">
			<h2>Best doctors in Romania</h2><br>
			<h4>We have the most valuable doctors in Romania. They have been practicing their skills for more than 15 years and they can resolve any pain you might have. We also have the best devices :)</h4><br>
		</div>
	</div>
</div>

